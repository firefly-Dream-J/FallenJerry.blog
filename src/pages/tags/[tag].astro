---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Icon } from 'astro-icon/components';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  
  const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags || []).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) => 
      post.data.tags?.includes(tag)
    ).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseLayout title={`标签: ${tag}`}>
  <div class="tag-page-container">
    
    <div class="tag-header fade-in-up">
      <h1><span class="hash">#</span> {tag}</h1>
      <p>包含该标签的文章共有 {posts.length} 篇</p>
    </div>

    <div class="post-list-wrapper fade-in-up delay-1">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}/`} class="glass-card post-card">
          <div class="post-content">
            <h3>{post.data.title}</h3>
            <div class="post-meta">
              <span class="date">{post.data.pubDate.toISOString().slice(0, 10)}</span>
              <div class="mini-tags">
                {post.data.tags?.map(t => <span>#{t}</span>)}
              </div>
            </div>
          </div>
          <div class="arrow-icon">
            <Icon name="lucide:arrow-right" />
          </div>
        </a>
      ))}
    </div>

    <div class="back-home fade-in-up delay-2">
      <a href="/" class="btn-outline">&larr; 返回首页</a>
    </div>

  </div>
</BaseLayout>

<style>
  .tag-page-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 120px 20px 60px 20px;
    min-height: 100vh;
  }


  .tag-header { text-align: center; margin-bottom: 50px; }
  .tag-header h1 { font-size: 3rem; color: var(--accent); margin-bottom: 10px; text-shadow: 0 0 20px rgba(94, 234, 212, 0.3); }
  .hash { opacity: 0.5; }
  .tag-header p { color: #94a3b8; }


  .post-list-wrapper { display: flex; flex-direction: column; gap: 20px; }

  .post-card {
    display: flex; justify-content: space-between; align-items: center;
    text-decoration: none; padding: 25px;
    background: rgba(15, 23, 42, 0.6); backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.08); border-radius: 12px;
    transition: 0.3s;
  }
  .post-card:hover {
    border-color: var(--accent); transform: translateX(5px);
    background: rgba(15, 23, 42, 0.8);
    box-shadow: 0 4px 20px rgba(0,0,0,0.2);
  }

  .post-content h3 { margin: 0 0 8px 0; color: #e2e8f0; font-size: 1.2rem; }
  .post-meta { display: flex; gap: 15px; align-items: center; }
  .date { color: #64748b; font-size: 0.9rem; font-family: monospace; }
  .mini-tags span { font-size: 0.8rem; color: var(--accent); margin-right: 5px; opacity: 0.8; }
  
  .arrow-icon { color: #475569; transition: 0.3s; }
  .post-card:hover .arrow-icon { color: var(--accent); transform: translateX(5px); }

  .back-home { margin-top: 50px; text-align: center; }
  .btn-outline { padding: 10px 25px; border: 1px solid #475569; border-radius: 50px; color: #94a3b8; text-decoration: none; transition: 0.3s; }
  .btn-outline:hover { border-color: var(--accent); color: var(--accent); background: rgba(94, 234, 212, 0.1); }

  .fade-in-up { opacity: 0; transform: translateY(20px); animation: fadeInUp 0.8s forwards; }
  .delay-1 { animation-delay: 0.2s; }
  .delay-2 { animation-delay: 0.4s; }
  @keyframes fadeInUp { to { opacity: 1; transform: translateY(0); } }
</style>