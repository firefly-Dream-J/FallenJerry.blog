---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
// 引入图标组件
import { Icon } from 'astro-icon/components';
---

<header id="main-header">
  <nav>
    <div class="header-left">
      <a href="/" class="mini-home" aria-label="回到首页">
        <Icon name="lucide:sparkles" class="logo-icon"/>
      </a>
    </div>

    <div class="internal-links">
      <HeaderLink href="/">
        <Icon name="lucide:home" class="nav-icon" /> 首页
      </HeaderLink>
      
      <HeaderLink href="/archive">
        <Icon name="lucide:archive" class="nav-icon" /> 归档
      </HeaderLink>
      
      <HeaderLink href="/tags">
        <Icon name="lucide:tags" class="nav-icon" /> 标签
      </HeaderLink>
      
      <HeaderLink href="/about">
        <Icon name="lucide:user" class="nav-icon" /> 关于
      </HeaderLink>
    </div>

    <div class="user-profile">
      <img src="/avatar.jpg" alt="Firefly" class="avatar" />
      
      <div class="dropdown-menu">
        <p class="user-id">ID: Jerry</p>
        <hr/>
        <a href="/friends" class="friend-link">
          <Icon name="lucide:link" class="dropdown-icon" /> 友情链接
        </a>
      </div>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    

    background: transparent; 
    
    border-bottom: none;
    position: fixed; 
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100; 
    transition: all 0.4s ease-in-out; 
  }


  header.scrolled {
    background: rgba(15, 23, 42, 0.85); 
    backdrop-filter: blur(12px); 
    -webkit-backdrop-filter: blur(12px);
    box-shadow: 0 4px 20px rgba(0,0,0,0.3); 
    padding: 0.2em 1em; 
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1em 0;
    max-width: 1200px;
    margin: auto;
  }

  .internal-links {
    display: flex;
    gap: 1.5em;
    transition: all 0.3s;
  }

  .nav-icon {
    width: 1.1em;
    height: 1.1em;
    margin-right: 4px;
    vertical-align: text-bottom;
  }

  .logo-icon {
    width: 1.8em;
    height: 1.8em;
    color: var(--accent); 
    filter: drop-shadow(0 0 5px rgba(94, 234, 212, 0.5)); 
    transition: transform 0.5s;
  }
  .mini-home:hover .logo-icon {
    transform: rotate(180deg) scale(1.1);
  }

  
  .user-profile {
    position: relative;
    display: flex;
    align-items: center;
    cursor: pointer;
    padding: 10px 0; 
  }

  .avatar {
    width: 42px;
    height: 42px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--accent); 
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    box-shadow: 0 0 10px rgba(94, 234, 212, 0.3);
  }

  .user-profile:hover .avatar {
    transform: scale(1.1);
    box-shadow: 0 0 15px rgba(94, 234, 212, 0.6);
  }

  .dropdown-menu {
    display: none; 
    position: absolute;
    top: 100%;
    right: 0;
    

    background: rgba(15, 23, 42, 0.95); 
    border: 1px solid rgba(255, 255, 255, 0.1); 
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    color: white;
    
    border-radius: 12px;
    padding: 15px;
    min-width: 150px;
    text-align: center;
    
    animation: fadeIn 0.2s ease-out;
    z-index: 101;
  }

  .dropdown-menu::before {
    content: '';
    position: absolute;
    top: -20px; 
    left: 0;
    width: 100%;
    height: 20px;
    background: transparent;
  }

  .user-profile:hover .dropdown-menu {
    display: block;
  }

  .user-id {
    margin: 0 0 10px 0;
    font-weight: bold;
    color: var(--accent); 
    font-size: 1em;
    letter-spacing: 0.5px;
  }

  .friend-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    text-decoration: none;
    font-size: 0.9em;
    
    color: #fff;
    background: rgba(255, 255, 255, 0.1); 
    padding: 8px 12px;
    border-radius: 8px;
    transition: all 0.2s;
  }
  
  .friend-link:hover {
    background: var(--accent); 
    color: #0F172A; 
    transform: translateY(-2px);
  }
  
  .dropdown-icon {
    width: 1em;
    height: 1em;
  }

  hr {
    margin: 10px 0;
    border-top: 1px dashed rgba(255, 255, 255, 0.2);
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media (max-width: 720px) {
    nav { padding: 1em; }
    .internal-links { display: none; } 
  }
</style>

<script>
  const header = document.getElementById('main-header');
  
  const handleScroll = () => {
    if (!header) return;

    if (window.scrollY > 50) {
      header.classList.add('scrolled');
    } else {
      header.classList.remove('scrolled');
    }
  };
  
  window.addEventListener('scroll', handleScroll);
  handleScroll();
</script>